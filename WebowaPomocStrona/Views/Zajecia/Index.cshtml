@model IEnumerable<WebowaPomocStrona.Models.Zajecia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zajęcia</h2>
@using (Html.BeginForm("New", "Zajecia"))
{
<button type="submit" class="btn btn-primary">Nowe Zajęcia</button>
}

@if (!Model.Any())
{
    <br/>
    <text>Nie masz przypisanych żadnych zajęć.</text>
}
@Html.Raw(TempData["msg"])
    <br/>
    <ul>
        @foreach (var zajecia in Model)
        {
            <li>@zajecia.Nazwa  @Html.ActionLink("Edytuj", "Edit", "Zajecia", new { Id = zajecia.Id }, null)    @Html.ActionLink("Usuń", "Delete", "Zajecia", new { Id = zajecia.Id },null) </li>
        }
    </ul>

